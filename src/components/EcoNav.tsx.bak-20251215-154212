"use client";

import Link from "next/link";
import { usePathname } from "next/navigation";

const items = [
  { href: "/", label: "In√≠cio", icon: "‚åÇ" },
  { href: "/coleta", label: "Coleta", icon: "‚ôª" },
  { href: "/servicos", label: "Servi√ßos", icon: "üß©" },
  { href: "/mapa", label: "Mapa", icon: "‚åñ" },
  { href: "/impacto", label: "Impacto", icon: "‚óé" },
];

export default function EcoNav() {
  const p = usePathname() || "/";
  return (
    <nav className="eco-nav" aria-label="Navega√ß√£o ECO">
      {items.map((it) => {
        const active = p === it.href || (it.href !== "/" && p.startsWith(it.href));
        return (
          <Link key={it.href} href={it.href} className={"eco-nav-item " + (active ? "active" : "")}>
            <span className="eco-nav-ico" aria-hidden>{it.icon}</span>
            <span className="eco-nav-lbl">{it.label}</span>
          </Link>
        );
      })}
    </nav>
  );
}